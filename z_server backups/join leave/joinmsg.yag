{{$roleid := $staff}}
{{/*This will be the role that gets pinged for new user notification. */}}
{{$age := 10080}}
{{/* Account age in minutes. 43829 = one month. 20160 = 2 weeks */}}
{{$channel := $ch }}
{{/*Channel to send message in. Currently set to joins-leaves. */}}

{{if lt ($min) $age}}
	{{if not (dbGet $user.ID "warningcooldown")}}
		{{$embed := sdict "author" (sdict "icon_url" ($user.AvatarURL "1024") "name" "A user with a new account joined!") "fields" (cslice (sdict "name" "**‚Ä¢ User:**" "value" (print $user.Mention " `" $user.String "`") "inline" true) (sdict "name" "**‚Ä¢ ID:**" "value" (print $user.ID) "inline" true) (sdict "name" "**‚Ä¢ Age:**" "value" (humanizeDurationSeconds (currentTime.Sub $create)) "inline" true)) "footer" (sdict "text" (print $user.String " joined")) "timestamp"  currentTime "color" 16426522}}
		{{if lt ($min) 1440}}
			{{$embed.Set "fields" ($embed.fields.Append (sdict "name" "**‚Ä¢ WARNING:**" "value" "This account is probably an alt or a spam / raid account‚Äº" "inline" true))}}
			{{$embed.Set "color" 15158332}}
			{{sendMessageNoEscape $channel (complexMessage "embed" (cembed $embed) "content" (print "‚ùóWARNING: User with extremely new account joined! " (mentionRoleID $roleid) ))}}
		{{else}}
			{{sendMessageNoEscape $channel (complexMessage "embed" (cembed $embed) "content" (print "‚ö†Ô∏èUser with new account joined! " (mentionRoleID $roleid) ))}}
		{{end}}
		{{dbSetExpire $user.ID "warningcooldown" true 86400}}
	{{end}}
{{end}}
