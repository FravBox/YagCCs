}}

{{/* join message */}}
{{$joinmsg := (print "üì•\nüü© **" $user.Mention " (" $user ") Joined** \nüü© ID: " $user.ID "\nüü© **<t:" currentTime.Unix ">** \nüü© Originally: " ((dbGet $user.ID "joindate").Value.joined) "\n<:br:937128105821216898> Last Verified: " ((dbGet $user.ID "joindate").Value.vdate) "\n<:br:937128105821216898> Last Left: " ((dbGet $user.ID "joindate").Value.left) "\n<:br:937128105821216898> *Membercount: " .Guild.MemberCount "*")}}

{{if not (dbGet $user.ID "joindate") }}
 
    {{dbSet $user.ID "joindate" $jinfo }}
	
	{{dbGet $user.ID "joindate"}}
    
	{{sendMessage $ch $joinmsg}}
{{else}}

    {{sendMessage $ch $joinmsg}}

{{$jinfo := sdict
"joined" (print "<t:" currentTime.Unix ">")
"vdate" ((dbGet $user.ID "joindate").Value.vdate)
